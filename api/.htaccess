# api/.htaccess - ensure API PHP files auto-include the JSON-safe bootstrap
<IfModule mod_php7.c>
    php_flag display_startup_errors Off
    php_flag display_errors Off
    php_value error_reporting E_ALL
    php_value auto_prepend_file "c:/xampp/htdocs/Sakorms.org/Inventory-web1.5/api/_api_bootstrap.php"
</IfModule>
<IfModule mod_php8.c>
    php_flag display_startup_errors Off
    php_flag display_errors Off
    php_value error_reporting E_ALL
    php_value auto_prepend_file "c:/xampp/htdocs/Sakorms.org/Inventory-web1.5/api/_api_bootstrap.php"
</IfModule>
